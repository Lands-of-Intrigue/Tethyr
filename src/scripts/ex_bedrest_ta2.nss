#include "ex_i0_date_time"

int StartingConditional()
{
    object oPC = GetPCSpeaker();
    int bRESTBED = CheckDateStringExpired(oPC, "REST_BED");

    if (bRESTBED == FALSE)
    {
      return TRUE;
    }
    return FALSE;
}
